<Window x:Class="ListenTube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListenTube"
        mc:Ignorable="d"
        Title="ListenTube - Main Window" Height="450" Width="800">
    <Grid Background="#FF3A3A3A">
        <Grid HorizontalAlignment="Right" Height="100" Margin="0,0,0,319" VerticalAlignment="Bottom" Width="792" Background="#FF930000">
            <Label Content="ListenTube" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="80" Width="358" Foreground="White" FontFamily="Yu Gothic UI Semibold" FontSize="48"/>
        </Grid>
        <TextBox x:Name="UrlText" Margin="137,137,137,185" TextWrapping="Wrap" Text="Enter your Youtube link" Background="#FF930000" BorderBrush="Silver" Foreground="White" FontFamily="Yu Gothic UI Semibold" FontSize="24" FontStyle="Italic" SelectionBrush="#FFD30404" Cursor="IBeam"/>
        <Button Content="Play" Margin="308,278,310,79" Background="#FF930000" BorderBrush="Silver" Foreground="White" FontFamily="Yu Gothic UI Semibold" FontSize="24" Cursor="Hand" Click="Button_Click" RenderTransformOrigin="0.49,0.885"/>

    </Grid>
</Window>
