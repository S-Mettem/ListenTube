<Window x:Class="ListenTube.WaitingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListenTube"
        mc:Ignorable="d"
        Title="WaitingWindow" Height="450" Width="500" Closing="Window_Closing">
    <Grid Background="#FF3A3A3A" >
        <Grid HorizontalAlignment="Right" Height="100" Margin="0,0,0,319" VerticalAlignment="Bottom" Width="492" Background="#FF930000">
            <Label Content="Wait, please" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="80" Width="358" Foreground="White" FontFamily="Yu Gothic UI Semibold" FontSize="48"/>
        </Grid>
        <ProgressBar Name="pbCalculationProgress" HorizontalAlignment="Left" Height="49" Margin="10,230,0,0" VerticalAlignment="Top" Width="472" Background="#FF2E2E2E" Foreground="#FF930000"/>
    </Grid>
</Window>
